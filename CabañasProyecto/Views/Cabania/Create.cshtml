@model Cabania
<h1>CREATE CABANIA</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">PRECIO</label>
        <input asp-for="Precio" class="form-control" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">CAPACIDAD</label>
        <input asp-for="Capacidad" class="form-control" />
        <span asp-validation-for="Capacidad" class="text-danger"></span>
    </div>


    <div>
        <label>
            <input asp-for="Estado" type="checkbox" class="filled-in" checked="checked" />
            <span asp-validation-for="Estado">¿Ocupada?</span>
        </label>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col s6 m6">
            <button class="btn waves-effect waves-light teal darken-1" type="submit" name="action">
                Grabar
                <i class="material-icons right">send</i>
            </button>

        </div>
        <div class="col s6 m6">
            <a class="waves-effect waves-light btn grey darken-3" asp-action="Index"><i class="material-icons left">undo</i>Volver</a>
        </div>
    </div>
</form>