@model IEnumerable<Cabania>
<h1> Cabañas </h1>
<p>
    <a asp-action="Create" class="btn-floating btn-large grey darken-1"> <i class="material-icons">holiday_village</i></a>
</p>
<table class="responsive-table highlight " z-depth-3" brown darken-2>
    <thdead class="blue darken-1 white-text">
        <tr>
            <th>
                @Html.DisplayNameFor(c => c.Id)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Capacidad)
            </th>
            <th>
                @Html.DisplayNameFor(c => c.Estado)
            </th>
        </tr>
    </thdead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(c => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(c => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(c => item.Capacidad)
                </td>
                <td>
                    @Html.DisplayTextFor(c => item.Estado)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="material-icons">edit</i></a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="material-icons red-text">delete</i></a>
                </td>
            </tr>

        }


    </tbody>


</table>
