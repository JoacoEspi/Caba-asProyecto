@model Cliente
<h4>Cliente</h4>
<hr />
<div class="row">
    <div>
        <form class="col s12" asp-action="Create">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Nombre" type="text" class="validate">
                    <label asp-for="Nombre"></label>
                    <span asp-validation-for="Nombre"></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Apellido" type="text" class="validate">
                    <label asp-for="Apellido"></label>
                    <span asp-validation-for="Apellido"></span>
                </div>
                 <div class="input-field col s6">
                    <i class="material-icons prefix">badge</i>
                    <input asp-for="DNI" type="text" class="validate">
                    <label asp-for="DNI"></label>
                    <span asp-validation-for="DNI"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">home</i>
                    <input asp-for="Direccion" type="text" class="validate">
                    <label asp-for="Direccion"></label>
                    <span asp-validation-for="Direccion"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">phone</i>
                    <input asp-for="Telefono" type="text" class="validate">
                    <label asp-for="Telefono"></label>
                    <span asp-validation-for="Telefono"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">contact_mail</i>
                    <input asp-for="Email" type="text" class="validate">
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row">
                <div class="col s6 m6">
                    <button class="btn waves-effect waves-light teal darken-1" type="submit" name="action">
                        Grabar
                        <i class="material-icons right">send</i>
                    </button>

                </div>

                <div class="col s6 m6">
                    <a class="waves-effect waves-light btn grey darken-3" asp-action="Index"><i class="material-icons left">undo</i>Volver</a>
                </div>
            </div>

        </form>

    </div>






</div>


