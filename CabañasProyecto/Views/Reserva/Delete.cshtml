@model Reserva

<h3>¿ Esta seguro de eliminar el siguiente registro?</h3>
<div>
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"><b>Reserva num: @Html.DisplayFor(model => model.Id)</b> </span>
                </div>
                <div class="card-action blue-grey darken-2">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Eliminar" class="waves-effect waves-light btn-small orange accent-3" />
                        <a asp-action="Index" class="right">Volver</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
